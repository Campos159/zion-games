{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,

    // ðŸ”§ Adiciona os tipos do Node.js e do Vite
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "exclude": [
    "src/server/**",
    "**/webhooks/**"
  ]
}
